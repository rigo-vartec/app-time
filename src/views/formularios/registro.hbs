<script>
    var rol;
function StartFunction(){
    rol = document.getElementById("Select1").value;
    if (rol === "0") {
        alert("Existe un campo vacio en el formulario");
        return false;
    } else {
        document.getElementById("form1").submit();
    }
}
</script>